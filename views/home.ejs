<!DOCTYPE html>
<html lang="en">

<head>


    <%- include('./partials/head') %>
    <title>Document</title>
    <style>
        body {
            background-color: black;
            color: white;
            margin-top: 56px; /* Space for fixed navbar */
        }

        h1 {
            text-align: center; /* Center the heading */
            margin-bottom: 20px; /* Space below the heading */
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin: 0 auto; /* Center the card container */
            max-width: 1200px; /* Optional: set a max width */
        }

        .card {
            margin: 10px;
            width: 18rem; /* Fixed width for each card */
            background-color: #1c1c1c; /* Optional: background color for cards */
            color: white;

            border-radius: 5px; /* Optional: rounded corners */
            overflow: hidden; /* Hide overflow from image */
        }

        .card img {
            height: 200px; /* Set a fixed height */
            width: 100%; /* Allow the width to adjust */
            object-fit: contain; /* Ensures the entire image is visible */
        }

        .card-body {
            padding: 15px; /* Add some padding to card body */
        }
        .card-title {
            max-height: 3em; /* Limit title height (approx. 1.5 lines) */
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .card-text {
            display: -webkit-box; /* Enable truncation for multiple lines */
            -webkit-line-clamp: 3; /* Show only 3 lines */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <h1>Home Page</h1> 

    <div class="card-container">
        <% blogs.reverse().forEach(blog => { %>
            <div class="card">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>"> <!-- Added alt attribute -->
                <div class="card-body">
                    <h5 class="card-title">
                        <%= blog.title %>
                    </h5>
                    <p class="card-text">
                        <%= blog.body %>
                    </p>
                    <p class="card-author">
                        <strong>Created by -: </strong>
                        <% if (blog.createdBy) { %>
                            <%= blog.createdBy.fullname %>
                            <% if (blog.createdBy.blueTick) { %>
                                <span style="color: greenyellow !important;">&#10004; </span>
                                <% } else { %>
                                <!-- <span>No blue tick</span> -->
                            <% } %>
                        <% } else { %>
                            Unknown
                        <% } %>
                    </p>
                    
                    
                    
                    
                    <a href="/blog/view/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include('./partials/script') %>
</body>

</html>
