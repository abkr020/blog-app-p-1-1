<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Edit Blog</title>
    <style>
        body {
            background-color: black;
            color: white; /* Optional: change text color to white */
            margin-top: 56px; /* Space for fixed navbar */
            text-align: center; /* Center text for better presentation */
        }

        .container {
            max-width: 600px; /* Set a max width for the form container */
            margin: auto; /* Center the container */
            background-color: #333; /* Optional: Background for better contrast */
            padding: 20px; /* Padding inside the container */
            border-radius: 8px; /* Rounded corners */
        }

        h2 {
            margin-bottom: 10px; /* Space below the headings */
            text-align: left; /* Align headings to the left */
        }

        .btn-submit {
            padding: 10px 20px;
            background-color: #37c263; /* Button color */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px; /* Increase button font size */
            transition: background-color 0.3s; /* Smooth background transition */
        }

        .btn-submit:hover {
            background-color: #2da953; /* Darker shade on hover */
        }

        img {
            max-width: 100%; /* Responsive image */
            height: auto; /* Maintain aspect ratio */
            margin-bottom: 20px; /* Space below the image */
        }
    </style>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <h1>Edit Blog Page</h1> <!-- Added heading for clarity -->

        <h2 class="card-title">
            <%= blog.title %>
        </h2>
        <p class="card-text">
            <%= blog.body %>
        </p>

        <form action="/blog/edit/update/<%= blog._id %>" method="post" enctype="multipart/form-data">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover Image" />

            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input name="coverImageURL" type="file" class="form-control" id="coverImage" aria-describedby="coverImage">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input value="<%= blog.title %>" name="title" type="text" class="form-control" id="title" aria-describedby="title">
            </div>
            <div class="mb-3">
                <label for="body">Body</label>
                <textarea name="body" class="form-control" placeholder="Leave a comment here" id="body"><%= blog.body %></textarea>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn-submit">Submit</button> <!-- Added button class -->
            </div>
        </form>
    </div>

    <%- include('./partials/script') %>
</body>

</html>
